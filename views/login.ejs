        // Inicia com a primeira pergunta randomizada
        exibirPergunta();

        // Exibir a imagem inicial "Voc√™ ganhou R$ 35,00 para come√ßar!" na primeira avalia√ß√£o
        document.getElementById("mensagem-inicial").style.display = "block";
    </script>

</body>
